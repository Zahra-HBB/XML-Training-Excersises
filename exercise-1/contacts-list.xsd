    <xs:element name="contacts">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="contact" maxOccurs="unbounded">
                    <xs:complexType mixed="true">
                        <xs:sequence>
                            <!-- NAME -->
                            <xs:element name="name" type="xs:string" />
                            <!-- COMPANY -->
                            <xs:element name="company" type="xs:string" minOccurs="0" />
                            <!-- JOB TITLE -->
                            <xs:element name="jobTitle" type="xs:string" minOccurs="0" />
                            <!-- CONTACT NUMBER -->
                            <xs:element name="contactNumbers">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="conatctNumber" minOccurs="1" maxOccurs="3">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="number">
                                                        <xs:simpleType>
                                                            <xs:restriction base="xs:string">
                                                                <xs:length value="10" />
                                                                <!-- Ex: 0312345345 -->
                                                                <xs:pattern value="[0-9]{10}" />
                                                            </xs:restriction>
                                                        </xs:simpleType>
                                                    </xs:element>
                                                    <xs:element name="type">
                                                        <xs:simpleType>
                                                            <xs:restriction base="xs:string">
                                                                <xs:enumeration value="Mobile" />
                                                                <xs:enumeration value="Home" />
                                                                <xs:enumeration value="Work" />
                                                                <xs:enumeration value="Fax" />
                                                            </xs:restriction>
                                                        </xs:simpleType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <!-- ADDRESS -->
                            <xs:element name="addresses">
                                <xs:complexType mixed="true">
                                    <xs:sequence>
                                        <xs:element name="address" minOccurs="1" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:choice>
                                                    <!-- HOME ADDRESS -->
                                                    <xs:element name="Home">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="streetAddress" type="xs:string" />
                                                                <xs:element name="suburb" type="xs:string" />
                                                                <xs:element name="postCode">
                                                                    <xs:simpleType>
                                                                        <xs:restriction base="xs:string">
                                                                            <xs:length value="4" />
                                                                            <xs:pattern value="[0-9]{4}" />
                                                                        </xs:restriction>
                                                                    </xs:simpleType>
                                                                </xs:element>
                                                                <xs:element name="state" >
                                                                    <xs:simpleType>
                                                                        <xs:restriction base="xs:string">
                                                                            <xs:pattern value="NSW|VIC|QLD|WA|SA|NT|ACT" />
                                                                        </xs:restriction>
                                                                    </xs:simpleType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <!-- BUSINESS ADDRESS -->
                                                    <xs:element name="Business">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="streetAddress" type="xs:string" />
                                                                <xs:element name="suburb" type="xs:string" />
                                                                <xs:element name="postCode">
                                                                    <xs:simpleType>
                                                                        <xs:restriction base="xs:string">
                                                                            <xs:length value="4" />
                                                                            <xs:pattern value="[0-9]{4}" />
                                                                        </xs:restriction>
                                                                    </xs:simpleType>
                                                                </xs:element>
                                                                <xs:element name="state" >
                                                                    <xs:simpleType>
                                                                        <xs:restriction base="xs:string">
                                                                            <xs:pattern value="NSW|VIC|QLD|WA|SA|NT|ACT" />
                                                                        </xs:restriction>
                                                                    </xs:simpleType>
                                                                </xs:element>
                                                                <xs:element name="department" type="xs:string" minOccurs="0" />
                                                                <xs:element name="buildingName" type="xs:string" minOccurs="0" />
                                                                <xs:element name="ABN" minOccurs="0">
                                                                    <xs:simpleType>
                                                                        <xs:restriction base="xs:string">
                                                                            <xs:length value="11" />
                                                                            <xs:pattern value="[0-9]{11}" />
                                                                        </xs:restriction>
                                                                    </xs:simpleType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:choice>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <!-- EMAIL ADDRESS -->
                            <xs:element name="emailAddress">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:pattern value="[\w-]+@([\w-]+\.)+[\w-]+" />
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>